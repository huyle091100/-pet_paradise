<div class="checkout-section pt-120 pb-120">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-7">
                    <div class="form-wrap box--shadow mb-30">
                        <h4 class="title-25 mb-20">Billing Details</h4>
                        <%= form_with(url: checkout_momo_carts_path, multipart: true, local: true) do |f| %>
                        
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-inner">
                                        <label>First Name</label>
                                        <input type="text" name="first_name" placeholder="Your first name" value="<%= current_user.first_name %>">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-inner">
                                        <label>Last Name</label>
                                        <input type="text" name="last_name" placeholder="Your last name" value="<%= current_user.last_name %>">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-inner">
                                        <label>Address</label>
                                        <input type="text" name="address" placeholder="Your address" value="<%= current_user.address %>" required>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-inner">
                                        <label>Phone Number</label>
                                        <input type="text" name="phone_number" placeholder="Your Phone Number" value="<%= current_user.phone_number %>" required>
                                    </div>
                                </div>
                                 <div class="place-order-btn">
                                    <button type="submit" class="primary-btn1 lg-btn">Pay with momo</button>
                                </div>
                            </div>
                        <% end %>
                    </div>
                </div>
                <aside class="col-lg-5">
                    <div class="added-product-summary mb-30">
                        <h5 class="title-25 checkout-title">
                            Order Summary
                        </h5>
                        <ul class="added-products">
                            <% @products.each do |product| %>
                                <%= render partial: "carts/order_summary", locals: {product: product} %>
                            <% end %>
                        </ul>
                    </div>
                    <div class="summery-card total-cost mb-30">
                        <table class="table cost-summery-table total-cost">
                            <thead>
                                <tr>
                                    <th>Total</th>
                                    <th><%= @total %></th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </aside>
            </div>
        </div>
    </div>