<header class="topbar">
  <!-- ============================================================== -->
  <!-- Navbar scss in header.scss -->
  <!-- ============================================================== -->
  <nav>
    <div class="nav-wrapper">
      <!-- ============================================================== -->
      <!-- Logo you can find that scss in header.scss -->
      <!-- ============================================================== -->
      <a href="javascript:void(0)" class="brand-logo">
                        <span class="icon">
                            <%= image_tag "logo-light-icon.png", class: "light-logo" %>
                          <%= image_tag "logo-icon.png", class: "dark-logo" %>
                        </span>
        <span class="text">
          <%= image_tag "logo-light-text.png", class: "light-logo" %>
          <%= image_tag "logo-text.png", class: "dark-logo" %>
                        </span>
      </a>
      <!-- ============================================================== -->
      <!-- Logo you can find that scss in header.scss -->
      <!-- ============================================================== -->
      <!-- ============================================================== -->
      <!-- Left topbar icon scss in header.scss -->
      <!-- ============================================================== -->
      <ul class="left">
        <li class="hide-on-med-and-down">
          <a href="javascript: void(0);" class="nav-toggle">
            <span class="bars bar1"></span>
            <span class="bars bar2"></span>
            <span class="bars bar3"></span>
          </a>
        </li>
        <li class="hide-on-large-only">
          <a href="javascript: void(0);" class="sidebar-toggle">
            <span class="bars bar1"></span>
            <span class="bars bar2"></span>
            <span class="bars bar3"></span>
          </a>
        </li>
        <!-- ============================================================== -->
        <!-- Notification icon scss in header.scss -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Comment topbar icon scss in header.scss -->
        <!-- ============================================================== -->
        <li>
          <a class="dropdown-trigger" href="javascript: void(0);" data-target="msg_dropdown"><i class="material-icons">message</i></a>
          <ul id="msg_dropdown" class="mailbox dropdown-content">
            <li>
              <div class="message-center">
                <!-- Message -->
                <% @chat.each do |chat| %>
                  <% next if chat.chat_messages.blank? %>
                  <a href="#" id="open-chat-<%= chat.id %>" onclick="toggleChat(<%= chat.id %>)">
                                                <span class="user-img">
                                                  <%= image_tag "users/1.jpg", class: "circle" %>
                                                  <!--                                                    <img src="../../assets/images/users/1.jpg" alt="user" class="circle">-->
                                                    <span class="profile-status online pull-right"></span>
                                                </span>
                    <span class="mail-contnet">
                                                    <h5><%= User.find_by(id: chat.sender_id).email.split("@").first %></h5>
                                                    <span class="mail-desc"><%= chat.chat_messages.last.message %></span>
                                                    <span class="time"><%= chat.chat_messages.last.created_at.in_time_zone("Asia/Ho_Chi_Minh").strftime("%H:%M") %></span>
                                                </span>
                  </a>
                <% end %>
              </div>
            </li>
          </ul>
        </li>
      </ul>
      <!-- ============================================================== -->
      <!-- Left topbar icon scss in header.scss -->
      <!-- ============================================================== -->
      <!-- ============================================================== -->
      <!-- Right topbar icon scss in header.scss -->
      <!-- ============================================================== -->
      <ul class="right">

        <!-- ============================================================== -->
        <!-- Profile icon scss in header.scss -->
        <!-- ============================================================== -->
        <li><a class="dropdown-trigger" href="javascript: void(0);" data-target="user_dropdown">
          <%= image_tag "users/2.jpg", class: "circle profile-pic", style: "display: inline-block" %>
          <!--          <img src="../../assets/images/users/2.jpg" alt="user" class="circle profile-pic">-->
        </a>
          <ul id="user_dropdown" class="mailbox dropdown-content dropdown-user">
            <li>
              <div class="dw-user-box">
                <div class="u-img">
                  <%= image_tag "users/2.jpg", class: "circle profile-pic" %>
                  <!--                  <img src="../../assets/images/users/2.jpg" alt="user">-->
                </div>
                <div class="u-text">
                  <h4>Steve Harvey</h4>
                  <p><%= current_user.email %></p>
                  <a class="waves-effect waves-light btn-small red white-text">View Profile</a>
                </div>
              </div>
            </li>
            <li role="separator" class="divider"></li>
            <li><a href="#"><i class="material-icons">settings</i> Account Setting</a></li>
            <li><%= link_to destroy_user_session_path, data: { turbo: true, turbo_method: :delete } do %>
                <i class="material-icons">power_settings_new</i> Logout
              <% end %></li>
          </ul>
        </li>
      </ul>
      <!-- ============================================================== -->
      <!-- Right topbar icon scss in header.scss -->
      <!-- ============================================================== -->
    </div>
  </nav>
  <!-- ============================================================== -->
  <!-- Navbar scss in header.scss -->
  <!-- ============================================================== -->
</header>
<style>
    .chat-windows .user-chat .chat-body {
        overflow: scroll !important;
    }
</style>