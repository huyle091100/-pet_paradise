<div class="col-lg-4 col-md-4 col-sm-6" id="<%= "product_#{product.id}" %>">
  <div class="collection-card">
    <div class="offer-card">
      <span>Offer</span>
    </div>
    <div class="collection-img">
      <img class="img-gluid" src="<%= product.image_url %>" alt="" style="height: 168px;object-fit: contain;">
      <%
=begin%>
 <div class="view-dt-btn">
        <div class="plus-icon">
          <i class="bi bi-plus"></i>
        </div>
        <a href="#">View Details</a>
      </div> 
<%
=end%>
      <ul class="cart-icon-list">
        <li>
          <%= form_for Cart.new, url: carts_path, data: { turbo: true }, html: {id: "add_to_cart_#{product.id}"}, method: :post do |f| %>
            <%= f.hidden_field :product_id, value: product.id %>
            <%= f.hidden_field :user_id, value: current_user&.id %>
            <button type="submit"><a><%= image_tag "icon/Icon-cart3.svg" %></a></button>
          <% end %>
<!--          <a href="cart.html">-->
          <%#= image_tag "icon/Icon-cart3.svg" %>
<!--          </a>-->
        </li>
        <%
=begin%>
 <li><a href="#"><%= image_tag "icon/Icon-favorites3.svg" %></a></li> 
<%
=end%>
      </ul>
    </div>
    <div class="collection-content text-center">
      <h4><a href="<%= shop_detail_path(product.id) %>"><%= product.name %></a></h4>
      <div class="price">
        <h6><%= number_to_currency(product.price,
          unit: "VND", format: "%n %u", precision: 0) %></h6>
      </div>
      <%
=begin%>
 <div class="review">
        <ul>
          <li><i class="bi bi-star-fill"></i></li>
          <li><i class="bi bi-star-fill"></i></li>
          <li><i class="bi bi-star-fill"></i></li>
          <li><i class="bi bi-star-fill"></i></li>
          <li><i class="bi bi-star-fill"></i></li>
        </ul>
        <span>(50)</span>
      </div> 
<%
=end%>
    </div>
  </div>
</div>