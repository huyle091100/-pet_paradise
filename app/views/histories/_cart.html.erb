<tr>
  <td data-label="Image">
    <%= image_tag product.image_url ? product.image_url : '', style: "width:
    250px; height: auto; margin-left: auto; margin-right: auto" %>
  </td>
  <td data-label="Food Name">
    <a href="#"><%= bill_product.name %></a>
  </td>
  <td data-label="Discount Price"><%= number_to_currency(product.price,
    unit: "VND", format: "%n %u", precision: 0) %></td>
  <td data-label="Quantity">
    <div class="quantity d-flex align-items-center">
      <div class="quantity-nav nice-number d-flex align-items-center">
        <%= bill_product.quantity %>
      </div>
    </div>
  </td>
  <td data-label="Subtotal">
    <div id="subtotal_<%= product.id %>"><%= bill_product.total_amount %></div>
  </td>
  <td>
    <div class="bill-status-<%= bill_product.bill.status %>">
      <%= bill_product.bill.status.humanize %>
    </div>  
  </td>
  <td><%= bill_product.bill.is_shipped ? "Shipped" : "Not shipped yet" %></td>
</tr>
