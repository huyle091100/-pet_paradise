<div class="checkout-section pt-120 pb-120">
  <div class="container">
    <div class="row g-4">
      <div class="col s12">
        <div class="form-wrap box--shadow mb-30">
          <h4 class="title-25 mb-20">My Profile</h4>
          <%= form_for current_user, url: profile_path(current_user.id),
          multipart: true, local: true, method: :patch do |f| %>

          <div class="row">
            <div class="col-lg-6">
              <div class="form-inner">
                <label>First Name</label>
                <input
                  type="text"
                  name="first_name"
                  placeholder="Your first name"
                  value="<%= current_user.first_name %>"
                  required
                />
              </div>
            </div>
            <div class="col-lg-6">
              <div class="form-inner">
                <label>Last Name</label>
                <input
                  type="text"
                  name="last_name"
                  placeholder="Your last name"
                  value="<%= current_user.last_name %>"
                  required
                />
              </div>
            </div>
            <div class="col-12">
              <div class="form-inner">
                <label>Address</label>
                <input
                  type="text"
                  name="address"
                  placeholder="Your address"
                  value="<%= current_user.address %>"
                  required
                />
              </div>
            </div>
            <div class="col-12">
              <div class="form-inner">
                <label>Phone Number</label>
                <input
                  type="text"
                  name="phone_number"
                  placeholder="Your Phone Number"
                  value="<%= current_user.phone_number %>"
                  required
                />
              </div>
            </div>
            <div class="place-order-btn right">
              <button type="submit" class="primary-btn1 lg-btn">
                Update profile
              </button>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
